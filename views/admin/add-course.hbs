<section>
    <div class="container mt-4" style="padding-left: 6rem;">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add course</h2>
                <form action="/admin/add-course" method="post" enctype="multipart/form-data">
                    <label for="">Course</label>
                    <input type="text" name="course" class="form-control">

                    <label for="">Price</label>
                    <input type="number" name="price" class="form-control">

                    <label for="">Image</label> <br>
                    <img src="/course-images/{{course._id}}.png" style="height:auto; max-width: 300px;  padding:20px;" id="imgView">
                    <input name="Image" type="file" class="form-control" onchange="viewImage(event)">

                    <label for="">About</label>
                    <input type="text" name="about" class="form-control" style="height: 4rem;">

                    <label for="">Add Videos</label>
                    <input name="videos" type="file" class="form-control">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>