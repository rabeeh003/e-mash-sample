<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-course" class="btn btn-success ml-auto">Add Course</a>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">course</th>
                    <th scope="col">about</th>
                    <th scope="col">price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.course}}</td>
                    <td>{{this.about}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width: 50px; max-height: 50px;" src="/course-images/{{this._id}}.png " alt="course image"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>